{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "es6",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
}
